{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "components": {
      "projectType": "library",
      "root": "projects/components",
      "sourceRoot": "projects/components/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/components/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/components/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/components/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/components/.storybook",
            "compodoc": false,
            "port": 6007
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/components/.storybook",
            "compodoc": false,
            "outputDir": "dist/showcases-components"
          }
        },
        "publish-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/components/.storybook",
            "compodoc": false,
            "outputDir": "docs/main/showcases-components"
          }
        }
      }
    },
    "showcases-css": {
      "projectType": "application",
      "schematics": {},
      "root": "projects/showcases/css",
      "architect": {
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/showcases/css/.storybook",
            "compodoc": false,
            "port": 6006
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/showcases/css/.storybook",
            "compodoc": false,
            "outputDir": "dist/showcases-css"
          }
        },
        "publish-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/showcases/css/.storybook",
            "compodoc": false,
            "outputDir": "docs/main/showcases-css"
          }
        }
      }
    },
    "showcases-components": {
      "projectType": "application",
      "schematics": {},
      "root": "projects/showcases/components",
      "architect": {
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/showcases/components/.storybook",
            "compodoc": false,
            "port": 6007
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/showcases/components/.storybook",
            "compodoc": false,
            "outputDir": "dist/showcases-components"
          }
        },
        "publish-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/showcases/components/.storybook",
            "compodoc": false,
            "outputDir": "docs/main/showcases-components"
          }
        }
      }
    },
    "sample-app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/sample-app",
      "sourceRoot": "projects/sample-app/src",
      "prefix": "sample",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/sample-app",
            "index": "projects/sample-app/src/index.html",
            "main": "projects/sample-app/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "projects/sample-app/tsconfig.app.json",
            "styles": [
              "node_modules/@masoni/css-design-tokens/dist/index.css",
              "node_modules/@masoni/css/dist/index.css",
              "node_modules/@masoni/icons/dist/css/filled/index.css",
              "node_modules/@masoni/icons/dist/css/outlined/index.css",
              "projects/sample-app/src/styles.scss"
            ],
            "assets": ["projects/sample-app/src/assets"]
          },
          "configurations": {
            "production": {
              "outputHashing": "all",
              "baseHref": "/dist/sample-app/"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "sample-app:build:production"
            },
            "development": {
              "browserTarget": "sample-app:build:development"
            }
          },
          "defaultConfiguration": "development"
        }
      }
    },
    "showcases-icons": {
      "projectType": "application",
      "schematics": {},
      "root": "projects/showcases/icons",
      "architect": {
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/showcases/icons/.storybook",
            "compodoc": false,
            "port": 6008
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/showcases/icons/.storybook",
            "compodoc": false,
            "outputDir": "dist/showcase-icons"
          }
        }
      }
    },
    "shared": {
      "projectType": "library",
      "root": "projects/shared",
      "sourceRoot": "projects/shared/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/shared/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/shared/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/shared/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/shared/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
