{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "components": {
      "projectType": "library",
      "root": "projects/components",
      "sourceRoot": "projects/components/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/components/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/components/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/components/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/components/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing"]
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/components/.storybook",
            "compodoc": false,
            "port": 6007
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/components/.storybook",
            "compodoc": false,
            "outputDir": "dist/showcases-components"
          }
        },
        "publish-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/components/.storybook",
            "compodoc": false,
            "outputDir": "docs/main/showcases-components"
          }
        }
      }
    },
    "showcases-css": {
      "projectType": "application",
      "schematics": {},
      "root": "projects/showcases/css",
      "architect": {
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/showcases/css/.storybook",
            "compodoc": false,
            "port": 6006
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/showcases/css/.storybook",
            "compodoc": false,
            "outputDir": "dist/showcases-css"
          }
        },
        "publish-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/showcases/css/.storybook",
            "compodoc": false,
            "outputDir": "docs/main/showcases-css"
          }
        }
      }
    },

    "showcases-icons": {
      "projectType": "application",
      "schematics": {},
      "root": "projects/showcases/icons",
      "architect": {
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/showcases/icons/.storybook",
            "compodoc": false,
            "port": 6008
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/showcases/icons/.storybook",
            "compodoc": false,
            "outputDir": "dist/storybook/icons/showcases"
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
