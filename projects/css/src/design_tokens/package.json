{
  "name": "@masoni/css-design-tokens",
  "version": "0.0.3",
  "description": "Bouygues Design System - Masoni specific CSS styles for design tokens",
  "keywords": [
    "design-system",
    "css",
    "libraries",
    "masoni"
  ],
  "main": "dist/index.css",
  "files": [
    "dist",
    "src"
  ],
  "homepage": "https://github.com/bouygues-construction/design-system-bycn/tree/main/projects/css/src/design-tokens",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bouygues-construction/design-system-bycn.git"
  },
  "scripts": {
    "build": "npm run build:style-dictionary && npm run build:css",
    "build:css": "postcss src/index.css -o dist/index.css --use postcss-import",
    "build:breakpoints": "style-dictionary build --config ./tokens/breakpoints/config.json",
    "build:color": "style-dictionary build --config ./tokens/color/config.json",
    "build:layout": "style-dictionary build --config ./tokens/layout/config.json",
    "build:primitive-color": "style-dictionary build --config ./tokens/primitive-color/config.json",
    "build:radius": "style-dictionary build --config ./tokens/radius/config.json",
    "build:shadow": "style-dictionary build --config ./tokens/shadow/config.json",
    "build:spacing": "style-dictionary build --config ./tokens/spacing/config.json",
    "build:typography": "style-dictionary build --config ./tokens/typography/config.json",
    "build:themes": "style-dictionary build --config ./tokens/themes/config.json",
    "style-dictionary": "npm run style-dictionary"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bouygues-construction/design-system-bycn/issues"
  },
  "devDependencies": {
    "postcss": "^8.4.23",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.3.0",
    "style-dictionary": "^4.1.2"
  }
}
